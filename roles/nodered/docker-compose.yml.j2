services:
  nodered:
    container_name: "{{ service_cfg.name }}"
    image: nodered/node-red
    security_opt:
      - seccomp:unconfined
    restart: unless-stopped
    ports:
      - "1880:1880"
    environment:
      - "TZ={{ timezone }}"
    #user: "${PUID}:${PGID}"
    volumes:
      - "{{ service_cfg.directory }}:/data"
    labels: *base_labels